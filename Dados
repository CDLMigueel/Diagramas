import java.util.Random;
import java.util.Scanner;

public class SimuladorDadosInteractivo {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        // Bucle para permitir múltiples lanzamientos
        while (true) {
            System.out.println("Presiona Enter para lanzar los dados o escribe 'salir' para terminar.");
            String input = scanner.nextLine();

            if (input.equalsIgnoreCase("salir")) {
                System.out.println("¡Hasta luego!");
                break; // Salir del bucle si el usuario escribe "salir"
            }

            // Simular el lanzamiento de dos dados
            int dado1 = lanzarDado(random);
            int dado2 = lanzarDado(random);

            // Mostrar los resultados
            System.out.println("Resultado del dado 1: " + dado1);
            System.out.println("Resultado del dado 2: " + dado2);
            System.out.println("Suma de los resultados: " + (dado1 + dado2));
        }

        scanner.close();
    }

    // Método para simular el lanzamiento de un dado
    private static int lanzarDado(Random random) {
        return random.nextInt(6) + 1; // Generar un número aleatorio entre 1 y 6
    }
}

